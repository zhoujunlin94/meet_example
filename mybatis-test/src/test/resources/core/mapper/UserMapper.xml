<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.zhoujunlin94.example.mybatis.core.mapper.UserMapper">
    
    <resultMap id="userMap" type="io.github.zhoujunlin94.example.mybatis.core.entity.User">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="age" jdbcType="INTEGER" property="age"/>
        <result column="sex" jdbcType="VARCHAR" property="sex"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <!-- column作为入参关联 -->
        <collection property="orders" column="id" ofType="io.github.zhoujunlin94.example.mybatis.core.entity.Order"
            select="selectOrderByUserId"/>
    </resultMap>
    
    <insert id="insertUser">
        insert into t_user (username, password, age, sex, email) values
        ('admin', 'root', 30, 'MAN', '123456@qq.com')
    </insert>

    <select id="selectById" resultType="io.github.zhoujunlin94.example.mybatis.core.entity.User">
        select * from t_user where id = #{id}
    </select>

    <select id="selectAll" resultType="io.github.zhoujunlin94.example.mybatis.core.entity.User">
        select * from t_user
    </select>

    <select id="selectUserAndOrders" resultMap="userMap">
        select * from t_user
    </select>

    <select id="selectOrderByUserId" resultType="io.github.zhoujunlin94.example.mybatis.core.entity.Order">
        select * from t_order where user_id = #{id}
    </select>

</mapper>